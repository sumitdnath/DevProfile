<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesbanner"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:scaleType="fitCenter"
            android:background="@color/colorPrimary"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:text="InjectHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView21"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintEnd_toStartOf="@+id/imageView22" app:layout_constraintTop_toTopOf="@+id/imageView22"
            app:layout_constraintBottom_toBottomOf="@+id/imageView22"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintVertical_bias="0.0"
    />
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView22"
            app:layout_constraintStart_toEndOf="@+id/imageView21" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView23" app:layout_constraintTop_toTopOf="@+id/imageView23"
            app:layout_constraintBottom_toBottomOf="@+id/imageView23" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView23"
            app:layout_constraintStart_toEndOf="@+id/imageView22"
            app:layout_constraintEnd_toStartOf="@+id/button2" android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView9"/>
    <Button
            android:text="Customize Dashbord"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:background="@drawable/rounded_gradient"
            style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/background_light"
            android:fontFamily="sans-serif" android:textSize="18sp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView24"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" android:layout_marginTop="32dp"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView25"
            app:layout_constraintTop_toTopOf="@+id/imageView24" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="16dp" android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView26"
            app:layout_constraintStart_toStartOf="@+id/imageView24"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView24"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView27"
            app:layout_constraintEnd_toEndOf="@+id/imageView25"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView25" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.338"
            android:scaleType="fitCenter" app:layout_constraintDimensionRatio="16:9"/>
</android.support.constraint.ConstraintLayout>